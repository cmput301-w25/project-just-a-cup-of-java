<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="330dp"
        android:layout_height="70dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Profile Picture -->
        <ImageView
            android:id="@+id/profilePicture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:contentDescription="Profile Picture"
            android:scaleX="1.5"
            android:scaleY="1.5"
            android:src="@drawable/baseline_account_circle_24" />

        <!-- User Info -->
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Display Name -->
            <TextView
                android:id="@+id/feedName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="14dp"
                android:text="Name"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Time -->
            <TextView
                android:id="@+id/feedTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="14dp"
                android:text="1 second ago"
                android:textSize="14sp"
                android:textStyle="italic" />
        </LinearLayout>

        <!-- Flags -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/socialSituation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="5dp"
                android:src="@drawable/socialsituation1"
                android:visibility="visible"
                android:scaleX="0.75"
                android:scaleY="0.75" />

            <ImageView
                android:id="@+id/containsPhoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="5dp"
                android:src="@drawable/mood_hasphoto"
                android:visibility="visible"
                android:scaleX="0.75"
                android:scaleY="0.75" />

            <ImageView
                android:id="@+id/containsExplanation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="5dp"
                android:src="@drawable/mood_hasexplanation"
                android:visibility="visible"
                android:scaleX="0.75"
                android:scaleY="0.75" />

            <ImageView
                android:id="@+id/containsLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="5dp"
                android:src="@drawable/mood_haslocation"
                android:visibility="visible"
                android:scaleX="0.75"
                android:scaleY="0.75" />
        </LinearLayout>

        <!-- Mood Icon -->
        <ImageView
            android:id="@+id/moodIndicator"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:contentDescription="Mood Indicator"
            android:src="@drawable/mood_happy" />
    </LinearLayout>

    <!-- Extra mood details -->
    <LinearLayout
        android:id="@+id/moodExtraDetails"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="50dp"
        android:paddingEnd="16dp"
        android:paddingTop="4dp"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/linearLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/socialSituationText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Social: Alone"
            android:textSize="13sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/triggerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trigger: I saw a girl I like"
            android:textSize="13sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/whyFeelText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Why: she's sooooooo bad"
            android:textSize="13sp"
            android:visibility="gone" />
    </LinearLayout>

    <!-- Divider Line -->
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:background="#CCCCCC"
        app:layout_constraintTop_toBottomOf="@+id/moodExtraDetails" />

</androidx.constraintlayout.widget.ConstraintLayout>
