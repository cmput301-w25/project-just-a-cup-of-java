<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#6525E0CF">

    <ImageView
        android:layout_width="188dp"
        android:layout_height="121dp"
        android:scaleType="fitXY"
        android:src="@drawable/image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.prolificinteractive.materialcalendarview.MaterialCalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:mcv_showOtherDates="all" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.136">

        <Button
            android:id="@+id/btn_calendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#E08E79"
            android:text="Calendar"
            android:layout_marginEnd="8dp"
            android:layout_gravity="start" />

        <Button
            android:id="@+id/btn_moodhistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:backgroundTint="#5A9999"
            android:text="Mood History" />

        <Button
            android:id="@+id/btn_mymap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#5A9999"
            android:text="My Map"
            android:layout_marginStart="8dp"
            android:layout_gravity="end" />

    </LinearLayout>
    <!--        android:backgroundTint="#85BEC8"-->
    <!--        android:backgroundTint="#D98160"-->


</androidx.constraintlayout.widget.ConstraintLayout>